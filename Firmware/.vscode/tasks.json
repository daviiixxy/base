{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile - Core_Hub",
            "group": "build",
            "type": "shell",
            "command": "make.exe",
            "args": ["-j4", "gccall", "TARGET=qcx212_0h00", "V=0", "PROJECT=Core_Hub"]
        },
        {
            "label": "Debug - Core_Hub",
            "group": "build",
            "type": "shell",
            "command": "python",
            "args": ["Debug/Scripts/debug.py", "Core_Hub"]
        },
        {
            "label": "Run - Core_Hub",
            "group": "build",
            "type": "shell",
            "command": "python",
            "args": ["Debug/Scripts/debug.py", "Core_Hub"]
        },
        {
            "label": "COM Select",
            "group": "build",
            "type": "shell",
            "command": "python",
            "args": ["Debug/Scripts/GUI.py"]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["clean_all"]
        }
    ]
}